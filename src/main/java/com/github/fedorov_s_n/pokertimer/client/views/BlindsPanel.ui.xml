<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="bs" type="com.github.fedorov_s_n.pokertimer.client.resources.BaseStyle" />
    <gwt:HTMLPanel ui:field="panel">
        <section>
            <table>
                <tr>
                    <td>
                        Default time 
                    </td>
                    <td class="cell">
                        <span ui:field="defaltTime"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        Small blind coefficient 
                    </td>
                    <td class="cell">
                        <span ui:field="smallCoeff"/>
                    </td>
                </tr>
                <tr>
                    <td>
                        Ante coefficient 
                    </td>
                    <td class="cell">
                        <span ui:field="anteCoeff"/>
                    </td>
                </tr>
            </table>
        </section>
        <section>
            <table>
                <tr>
                    <td class="fcell"></td>
                    <td class="hcell">small</td>
                    <td class="hcell">big</td>
                    <td class="hcell">ante</td>
                    <td class="hcell">time</td>
                    <td class="bcell">
                        <span>
                            <gwt:Button ui:field="buttonAdd" styleName="{bs.button}">
                            &#x271A;
                            </gwt:Button>
                        </span>
                    </td>
                    <td class="bcell">
                        <span>
                            <gwt:Button ui:field="buttonRemoveAll" styleName="{bs.button}">
                            &#x2718;
                            </gwt:Button>
                        </span>
<!--                        <span>
                            <gwt:Button ui:field="buttonLoad" styleName="{bs.button}">
                            &#x2BEF;
                            </gwt:Button>
                        </span>
                        <span>
                            <gwt:Button ui:field="buttonSave" styleName="{bs.button}">
                            &#x2BED;
                            </gwt:Button>
                        </span>-->
                    </td>
                </tr>
            </table>
            <gwt:FlowPanel ui:field="blinds" styleName="{bs.blindsList}" />
        </section>
    </gwt:HTMLPanel>
</ui:UiBinder>